    <!-- Part 2: Interactive Features -->
    <section>
        <h2>Light/Dark Mode Toggle</h2>
        <button id="themeToggleBtn">Toggle Theme</button>
    </section>

    <section>
        <h2>Counter Game</h2>
        <button id="increaseCounterBtn">Increase</button>
        <p>Counter: <span id="counterValue">0</span></p>
    </section>

    <!-- Part 3: Form Validation -->
    <section>
        <h2>Registration Form</h2>
        <form id="registrationForm">
            <label>Name: <input type="text" id="name"></label><br>
            <label>Email: <input type="text" id="email"></label><br>
            <label>Password: <input type="password" id="password"></label><br>
            <button type="submit">Register</button>
        </form>
        <p id="formMessage"></p>
    </section>

